{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A node-link diagram with force-directed layout, depicting character co-occurrence in the novel Les MisÃ©rables.",
  "width": 1200,
  "height": 1200,
  "padding": 0,
  "autosize": "none",

  "signals": [
    { "name": "cx", "update": "width / 2" },
    { "name": "cy", "update": "height / 2" },

    { "name": "nodeRadius", "value": 8, "bind": {"input": "range", "min": 1, "max": 50, "step": 1} },

    { "name": "weightThreshold", "value": 0.0, "bind": {"input": "range", "min": 0.0, "max": 1.0, "step": 0.05} },
    { "name": "rankThreshold", "value": 6, "bind": {"input": "range", "min": 1, "max": 3, "step": 1} },


    { "name": "nodeCharge", "value": -10, "bind": {"input": "range", "min":-100, "max": 10, "step": 1} },
    { "name": "linkDistance", "value": 40, "bind": {"input": "range", "min": 5, "max": 100, "step": 1} },
    
    { "name": "static", "value": true, "bind": {"input": "checkbox"} },
    { "name": "colorClasses", "value": true, "bind": {"input": "checkbox"} },
    { "name": "colorDomains", "value": true, "bind": {"input": "checkbox"} },

    { "name": "gravityX", "value": 0.03, "bind": {"input": "range", "min": 0, "max": 0.1} },
    { "name": "gravityY", "value": 0.03, "bind": {"input": "range", "min": 0, "max": 0.1} },


    {
      "description": "State variable for active node fix status.",
      "name": "fix", "value": false,
      "on": [
        {
          "events": "symbol:mouseout[!event.buttons], window:mouseup",
          "update": "false"
        },
        {
          "events": "symbol:mouseover",
          "update": "fix || true"
        },
        {
          "events": "[symbol:mousedown, window:mouseup] > window:mousemove!",
          "update": "xy()",
          "force": true
        }
      ]
    },
    {
      "description": "Graph node most recently interacted with.",
      "name": "node", "value": null,
      "on": [
        {
          "events": "symbol:mouseover",
          "update": "fix === true ? item() : node"
        }
      ]
    },
    {
      "description": "Flag to restart Force simulation upon data changes.",
      "name": "restart", "value": false,
      "on": [
        {"events": {"signal": "fix"}, "update": "fix && fix.length"}
      ]
    }
  ],

  "data": [
    {
      "name": "node-data",
      "values": []
    },
    {
      "name": "link-data",
      "values": [],
      "transform": [
        {"type": "filter", "expr": "datum.weight > weightThreshold"},
        {"type": "filter", "expr": "datum.rank <= rankThreshold"}
      ]
    }
  ],

  "scales": [
    {
      "name": "ec-color",
      "type": "ordinal",
      "domain": [ "Oxidoreductase", "Transferase", "Hydrolase", "Lyase", "Isomerase", "Ligase", "Translocase", "Unknown" ],
      "range": [ "#7F3C8D", "#11A579", "#3969AC", "#F2B701", "#E73F74", "#80BA5A", "#E68310", "#c0c0c0" ]
    },
    {
      "name": "chem-color",
      "type": "ordinal",
      "domain": { "data": "node-data", "field": "organic_superclass" },
      "range": { "scheme": "category20" }
    },
    {
      "name": "shape",
      "type": "ordinal",
      "domain": ["class", "domain"],
      "range": ["circle", "square"]
    },
    {
      "name": "weight",
      "type": "linear",
      "domain": [0, 1],
      "range": { "scheme": "greys" }
    }
  ],

  "legends": [
    {
      "fill": "ec-color",
      "title": "Top-Level EC",
      "orient": "top-right",
      "padding": 4,
      "encode": {
        "symbols": {
          "enter": {
            "shape": {"value": "square"},
            "strokeWidth": {"value": 2},
            "size": {"value": 64}
          }
        }
      }
    },
    {
      "fill": "chem-color",
      "title": "Chemical class",
      "orient": "top-right",
      "padding": 4,
      "encode": {
        "symbols": {
          "enter": {
            "shape": {"value": "circle"},
            "strokeWidth": {"value": 2},
            "size": {"value": 64}
          }
        }
      }
    }
  ],

  "marks": [
    {
      "name": "nodes",
      "type": "symbol",
      "zindex": 1,

      "from": {"data": "node-data"},
      "on": [
        {
          "trigger": "fix",
          "modify": "node",
          "values": "fix === true ? {fx: node.x, fy: node.y} : {fx: fix[0], fy: fix[1]}"
        },
        {
          "trigger": "!fix",
          "modify": "node", "values": "{fx: null, fy: null}"
        }
      ],

      "encode": {
        "enter": {
          "stroke": {"value": "white"},
          "shape": {"scale": "shape", "field": "type"},
          "xfocus": {"signal": "cx"},
          "yfocus": {"signal": "cy"},
          "size": {"signal": "4 * datum.size * datum.size"},
          "href": [
            {
              "test": "datum.type == 'class'",
              "signal": "\"http://classyfire.wishartlab.com/tax_nodes/C\" + substring(datum.id, 10)"
            },
            {
              "test": "datum.type == 'domain'",
              "signal": "\"https://www.ebi.ac.uk/interpro/entry/pfam/\" + substring(datum.id, 0, indexof(datum.id, \".\"))"
            }
          ],
          "tooltip": {"signal": "if(datum.type == 'class', {'id': datum.id, 'name': datum.name, 'superclass': datum.organic_superclass}, {'id': datum.id, 'name': datum.name, 'ec': datum.ec, 'category': datum.ec_kind})"}
        },
        "update": {
          "cursor": {"value": "pointer"},
          "fill": [
            {"test": "colorClasses && datum.type == 'class'", "scale": "chem-color", "field": "organic_superclass"},
            {"test": "colorDomains && datum.type == 'domain'", "scale": "ec-color", "field": "ec_kind"},
            {"value": "grey"}
          ]
        }
      },

      "transform": [
        {
          "type": "force",
          "iterations": 600,
          "restart": {"signal": "restart"},
          "static": {"signal": "static"},
          "signal": "force",
          "forces": [
            {"force": "center", "x": {"signal": "cx"}, "y": {"signal": "cy"}},
            {"force": "x", "x": "xfocus", "strength": {"signal": "gravityX"}},
            {"force": "y", "y": "yfocus", "strength": {"signal": "gravityY"}},
            {"force": "collide", "radius": {"signal": "nodeRadius"}},
            {"force": "nbody", "strength": {"signal": "nodeCharge"}},
            {
              "force": "link", 
              "links": "link-data", 
              "distance": {"signal": "linkDistance"},
              "strength": {"expr": "datum.weight"}
            }
          ]
        }
      ]

    },
    {
      "type": "path",
      "from": {"data": "link-data"},
      "interactive": false,
      "encode": {
        "enter": {
          "stroke": {"value": "black"}
        },
        "update": {
          "strokeWidth": {"field": "weight"}
        }
      },
      "transform": [
        {
          "type": "linkpath",
          "require": {"signal": "force"},
          "shape": "line",
          "sourceX": "datum.source.x", "sourceY": "datum.source.y",
          "targetX": "datum.target.x", "targetY": "datum.target.y"
        }
      ]
    }
  ]
}
